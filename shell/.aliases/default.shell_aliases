#-------------------------------DEFAULT-------------------------------------------------------------------
## Fixes
# A trailing space causes the next word to be checked for alias substitution
alias xargs='xargs '

## General
alias ~='cd ~'
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'
alias .......='cd ../../../../../../'
alias ........='cd ../../../../../../../'
alias ll='ls -lah'
alias vi='vim'
alias v='vim .'
alias n='vim'

## Python
alias py='python'
