#-------------------------------DEFAULT-------------------------------------------------------------------
## Fixes
# A trailing space causes the next word to be checked for alias substitution
alias xargs='xargs '

## General
alias ~='cd ~'
alias ..='cd ../'
alias ...='cd ../../'
alias ls='exa'
alias ll='ls -lah'
alias emacs='emacs -nw'
alias c='codium .'
alias vi='vim'
alias vim='nvim'
alias v='vim .'

## Python
alias py='python'
#-------------------------------END OF DEFAULT------------------------------------------------------------
